# Copy this file to .env.local and fill in your values
# Never commit .env.local to git

# =============================================================================
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx

# =============================================================================
# APP CONFIGURATION (Required)
# =============================================================================

# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# RESEND - Email Service (Optional)
# Get API key from: https://resend.com/api-keys
# Required only if you want to send invoices via email
# =============================================================================

RESEND_API_KEY=re_xxx

# =============================================================================
# UPSTASH - Rate Limiting (Optional)
# Get credentials from: https://console.upstash.com
# Required only if you want rate limiting on auth/email endpoints
# App works without these - rate limiting will be disabled
# =============================================================================

UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx
